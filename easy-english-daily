const topics = {
  daily: [
    { phrase: "wake up", meaning: "thức dậy" },
    { phrase: "brush teeth", meaning: "đánh răng" },
    { phrase: "make breakfast", meaning: "làm bữa sáng" },
    { phrase: "go to bed", meaning: "đi ngủ" }
  ],
  social: [
    { phrase: "hang out", meaning: "đi chơi" },
    { phrase: "catch up", meaning: "hỏi thăm, cập nhật tình hình" },
    { phrase: "give a hand", meaning: "giúp đỡ" },
    { phrase: "make a joke", meaning: "nói đùa" }
  ],
  work: [
    { phrase: "meet a deadline", meaning: "hoàn thành đúng hạn" },
    { phrase: "take notes", meaning: "ghi chú" },
    { phrase: "give a presentation", meaning: "thuyết trình" },
    { phrase: "follow up", meaning: "theo dõi, tiếp tục xử lý" }
  ],
  emotions: [
    { phrase: "cheer up", meaning: "vui lên" },
    { phrase: "calm down", meaning: "bình tĩnh" },
    { phrase: "freak out", meaning: "hoảng sợ" },
    { phrase: "be excited", meaning: "hào hứng" }
  ]
};

let currentTopic = [];
let currentIndex = 0;

function loadTopic(name) {
  currentTopic = topics[name];
  currentIndex = 0;
  document.getElementById("topic-title").textContent = "Chủ đề: " + name;
  showCard();
  generateQuiz();
  localStorage.setItem("lastTopic", name);
}

function showCard() {
  const card = currentTopic[currentIndex];
  document.getElementById("phrase").textContent = card.phrase;
  document.getElementById("meaning").textContent = card.meaning;
}

function nextCard() {
  currentIndex = (currentIndex + 1) % currentTopic.length;
  showCard();
}

function playAudio() {
  const text = currentTopic[currentIndex].phrase;
  const utterance = new SpeechSynthesisUtterance(text);
  utterance.lang = 'en-US';
  speechSynthesis.speak(utterance);
}

function generateQuiz() {
  const qIndex = Math.floor(Math.random() * currentTopic.length);
  const question = currentTopic[qIndex];
  document.getElementById("quiz-question").textContent = `"${question.phrase}" nghĩa là gì?`;

  let options = [question.meaning];
  while (options.length < 4) {
    let randomMeaning = currentTopic[Math.floor(Math.random() * currentTopic.length)].meaning;
    if (!options.includes(randomMeaning)) options.push(randomMeaning);
  }
  options.sort(() => Math.random() - 0.5);

  const container = document.getElementById("quiz-options");
  container.innerHTML = "";
  options.forEach(opt => {
    const btn = document.createElement("button");
    btn.textContent = opt;
    btn.onclick = () => {
      if (opt === question.meaning) {
        alert("✅ Chính xác!");
      } else {
        alert("❌ Sai rồi!");
      }
      generateQuiz();
    };
    container.appendChild(btn);
  });
}

// Tự động tải lại chủ đề cuối cùng khi mở web
window.onload = () => {
  const last = localStorage.getItem("lastTopic");
  if (last && topics[last]) {
    loadTopic(last);
  }
};
